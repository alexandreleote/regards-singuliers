{% extends 'admin/base.html.twig' %}

{% block title %}Créer un service{% endblock %}

{% block body %}
    <div class="admin-header">
        <h1>Créer un nouveau service</h1>
        <a href="{{ path('admin_services_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Retour aux services
        </a>
    </div>

    <div class="admin-content">
        {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(form.title) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.price) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.duration) }}
                </div>
            </div>

            <div class="mb-3">
                {{ form_row(form.description) }}
            </div>

            <div class="d-flex justify-content-end gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
