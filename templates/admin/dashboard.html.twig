{% extends 'admin/layout.html.twig' %}

{% block content_title %}Tableau de bord - regards singuliers{% endblock %}

{% block main %}

    {# Statistiques #}
    <div class="dashboard-stats">
        <div class="stats-grid">
            <div class="stat-card">
                <i class="fas fa-users"></i>
                <span class="stat-label">Utilisateurs</span>
                <span class="stat-value">{{ stats.users|default(0) }}</span>
            </div>
            <div class="stat-card">
                <i class="fas fa-image"></i>
                <span class="stat-label">RÃ©alisations</span>
                <span class="stat-value">{{ stats.realisations|default(0) }}</span>
            </div>
            <div class="stat-card">
                <i class="fas fa-briefcase"></i>
                <span class="stat-label">Prestations</span>
                <span class="stat-value">{{ stats.services|default(0) }}</span>
            </div>
            <div class="stat-card">
                <i class="fas fa-envelope"></i>
                <div class="stat-content">
                    <span class="stat-value">{{ stats.contacts|default(0) }}</span>
                    <span class="stat-label">Messages</span>
                    {% if stats.unread_contacts is defined and stats.unread_contacts > 0 %}
                        <span class="unread-badge">{{ stats.unread_contacts }} non lu(s)</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Actions rapides #}
    <div class="dashboard-actions">
        <h2>Actions rapides</h2>
        <div class="actions-grid">
            {% for action in actions %}
                <a href="{{ action.url }}" class="action-card">
                    <i class="{{ action.icon }}"></i>
                    <span>{{ action.title }}</span>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
