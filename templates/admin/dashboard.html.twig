{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}

    {# Statistiques #}
    <div class="dashboard-stats">
        <div class="stats-grid">
            <div class="stat-card">
                <i class="stat-icon fa fa-users"></i>
                <div class="stat-content">
                    <span class="stat-value">{{ stats.users }}</span>
                    <span class="stat-label">Utilisateurs</span>
                </div>
            </div>
            <div class="stat-card">
                <i class="stat-icon fa fa-image"></i>
                <div class="stat-content">
                    <span class="stat-value">{{ stats.realisations }}</span>
                    <span class="stat-label">RÃ©alisations</span>
                </div>
            </div>
            <div class="stat-card">
                <i class="stat-icon fa fa-gear"></i>
                <div class="stat-content">
                    <span class="stat-value">{{ stats.services }}</span>
                    <span class="stat-label">Services</span>
                </div>
            </div>
            <div class="stat-card">
                <i class="stat-icon fa fa-envelope"></i>
                <div class="stat-content">
                    <span class="stat-value">{{ stats.contacts|default(0) }}</span>
                    <span class="stat-label">Messages</span>
                    {% if stats.unread_contacts is defined and stats.unread_contacts > 0 %}
                        <span class="unread-badge">{{ stats.unread_contacts }} non lu(s)</span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    {# Actions rapides #}
    <div class="dashboard-actions">
        <h2>Actions rapides</h2>
        <div class="actions-grid">
            {% for action in actions %}
                <a href="{{ action.url }}" class="action-card">
                    <i class="{{ action.icon }}"></i>
                    <span>{{ action.title }}</span>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
