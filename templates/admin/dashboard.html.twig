{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="admin-header">
        <h1>Tableau de bord</h1>
    </div>

    <div class="admin-content">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-item">
                            <i class="fas fa-users"></i>
                            <div>
                                <div class="stat-value">{{ users_count }}</div>
                                <div class="stat-label">Utilisateurs</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-item">
                            <i class="fas fa-file-alt"></i>
                            <div>
                                <div class="stat-value">{{ posts_count }}</div>
                                <div class="stat-label">Articles</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <div class="stat-item">
                            <i class="fas fa-concierge-bell"></i>
                            <div>
                                <div class="stat-value">{{ services_count }}</div>
                                <div class="stat-label">Services</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .stat-item {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        .stat-item i {
            font-size: 1.5em;
            color: var(--primary-color);
        }
        .stat-value {
            font-size: 1.5em;
            font-weight: bold;
        }
        .stat-label {
            color: #6c757d;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('admin') }}
{% endblock %}
