{% extends 'admin/base.html.twig' %}

{% block title %}Modifier une prestation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4 text-gray-800">Modifier une prestation</h1>

        <div class="card shadow mb-4">
            <div class="card-body">
                {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                    <a href="{{ path('admin_services_index') }}" class="btn btn-secondary">Annuler</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
