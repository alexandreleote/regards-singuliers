{% extends 'admin/base.html.twig' %}

{% block title %}Services - Administration{% endblock %}

{% block body %}
    <div class="admin-header">
        <h1>Services</h1>
        <a href="{{ path('admin_services_create') }}" class="btn btn-primary">Créer une Nouvelle Prestation</a>
    </div>
    
    <div class="admin-content">
        {% if services is not empty %}
            <table class="table">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Prix</th>
                        <th>Durée</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for service in services %}
                        <tr>
                            <td>{{ service.title }}</td>
                            <td>{{ service.price }}€</td>
                            <td>{{ service.duration }} minutes</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('admin_services_edit', {'id': service.id}) }}" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="{{ path('admin_services_delete', {'id': service.id}) }}" method="POST" class="d-inline">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce service ?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun service n'a été créé pour le moment.</p>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .table {
            width: 100%;
            margin-top: 1rem;
        }
        .table th, .table td {
            padding: 0.5rem;
            border: 1px solid #ddd;
        }
    </style>
{% endblock %}
