{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Bannir temporairement un utilisateur{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Bannir temporairement l'utilisateur : {{ user.email }}</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fa fa-exclamation-triangle"></i>
                Attention : L'utilisateur ne pourra pas se connecter jusqu'à la date spécifiée.
            </div>
            
            <div class="user-info mb-4">
                <p><strong>Email :</strong> {{ user.email }}</p>
                {% if user.name or user.firstName %}
                    <p><strong>Nom complet :</strong> {{ user.name }} {{ user.firstName }}</p>
                {% endif %}
                <p><strong>Date d'inscription :</strong> {{ user.createdAt|date('d/m/Y H:i') }}</p>
            </div>
            
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.banUntil) }}
                    {{ form_widget(form.banUntil, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.banUntil) }}
                    <small class="form-text text-muted">Sélectionnez la date jusqu'à laquelle l'utilisateur sera banni.</small>
                </div>
                
                <div class="form-group mt-4">
                    <a href="{{ ea_url().setAction('index').generateUrl() }}" class="btn btn-secondary">Annuler</a>
                    {{ form_widget(form.submit) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
