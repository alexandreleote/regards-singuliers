{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="contact-container">
    <div class="contact-grid">
        <!-- Colonne de gauche (1/3) -->
        <div class="contact-info">
            <h2>Contactez-moi</h2>
            <p>Prenons le temps d'établir vos besoins et de discuter de votre projet.</p>
            
            <div class="info-section">
                <h3>Informations de contact</h3>
                <ul>
                    <li><i class="fas fa-envelope"></i> hello@regards-singuliers.com</li>
                    <li><i class="fas fa-phone"></i> +33 (0)6 07 02 92 22</li>
                    <li><i class="fas fa-map-marker-alt"></i> 6 Le Bronz 56480 Saint-Aignan</li>
                </ul>
            </div>
            
            <div class="info-section">
                <h3>Horaires</h3>
                <ul>
                    <li>Lundi - Vendredi: 9h - 18h</li>
                    <li>Samedi: 10h - 14h</li>
                </ul>
            </div>
        </div>

        <!-- Colonne de droite (2/3) -->
        <div class="contact-form">
            <form data-controller="contact" data-action="submit->contact#submit" data-contact-hidden-class="hidden">
                <div class="form-type">
                    <label class="radio-label">
                        <input type="radio" name="type" value="particular" checked data-contact-target="type" data-action="change->contact#change">
                        <span>Particulier</span>
                    </label>
                    <label class="radio-label">
                        <input type="radio" name="type" value="professional" data-contact-target="type" data-action="change->contact#change">
                        <span>Professionnel</span>
                    </label>
                </div>

                <!-- Section commune initiale -->
                <div class="form-section">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="lastName">Nom</label>
                            <input type="text" id="lastName" name="lastName" required>
                        </div>
                        <div class="form-group">
                            <label for="firstName">Prénom</label>
                            <input type="text" id="firstName" name="firstName" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required data-contact-target="email">
                        </div>
                        <div class="form-group">
                            <label for="phone">Téléphone</label>
                            <input type="tel" id="phone" name="phone" required>
                        </div>
                    </div>
                </div>

                <!-- Section professionnelle -->
                <div class="form-section hidden" data-contact-target="section" data-contact-type-target="professional">
                    <div class="form-group">
                        <label for="company">Entreprise</label>
                        <input type="text" id="company" name="company">
                    </div>
                </div>

                <!-- Section commune finale -->
                <div class="form-section">
                    <div class="form-group">
                        <label for="location">Localisation</label>
                        <input type="text" id="location" name="location" required>
                    </div>

                    <div class="form-group">
                        <label for="description">Description de votre projet</label>
                        <textarea id="description" name="description" rows="4" required></textarea>
                    </div>

                    <button type="submit" class="submit-btn">Envoyer</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
