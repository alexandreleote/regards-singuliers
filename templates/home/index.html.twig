{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <!-- Carrousel des réalisations -->
    <div class="">
        <div class="">
            {% for realisation in latest_realisations %}
                <div class="">
                    <img src="{{ asset('uploads/realisations/' ~ realisation.mainImage) }}" 
                         alt="{{ realisation.title }}"
                         class="">
                    <div class="">
                        <h2 class="">{{ realisation.title }}</h2>
                        <a href="{{ path('realisation_show', {'id': realisation.id}) }}" 
                           class="">
                            En savoir plus
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>

    <div class="">
        <div class="text-center mb-8">
            <a href="{{ path('realisations') }}" 
               class="">
                Voir toutes nos réalisations
            </a>
        </div>

        <!-- Section des prestations -->
        <h2 class="">Nos prestations</h2>
        <div class="">
            {% for service in services %}
                <div class="n">
                    <div class="">
                        <h3 class="">{{ service.title }}</h3>
                        <p class="">{{ service.description|striptags|length > 150 ? service.description|striptags|slice(0, 150) ~ '...' : service.description|striptags }}</p>
                        <a href="{{ path('prestation_show', {'id': service.id}) }}" 
                           class="">
                            En savoir plus
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
        new Swiper('.swiper', {
            loop: true,
            autoplay: {
                delay: 5000,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
{% endblock %}