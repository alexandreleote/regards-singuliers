{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <!-- Section vidéo d'accueil -->
    <div class="video-container">
        <div class="video-overlay"></div>
        <video class="video-background" autoplay muted loop playsinline>
            <source src="{{ asset('videos/home-video.mp4') }}" type="video/mp4">
            Votre navigateur ne supporte pas la lecture de vidéos.
        </video>
        <div class="video-content">
            <h1 class="video-title">regards singuliers</h1>
            <a href="{{ path('realisations') }}" class="btn btn-primary">
                Découvrir nos réalisations
            </a>
        </div>
    </div>

    <div class="content">
        <!-- Section des prestations -->
        <h2 class="section-title">Nos prestations</h2>
        <div class="services">
            {% for service in services %}
                <div class="service">
                    <div class="service-content">
                        <h3 class="service-title">{{ service.title }}</h3>
                        <p class="service-description">{{ service.description|striptags|length > 150 ? service.description|striptags|slice(0, 150) ~ '...' : service.description|striptags }}</p>
                        <a href="{{ path('prestation_show', {'slug': service.slug}) }}" 
                           class="service-link">
                            En savoir plus
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}