{% extends 'base.html.twig' %}

{% block title %}Mes Discussions{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
        <h1 class="text-3xl font-bold mb-8">Mes Discussions</h1>
        
        <div class="bg-white rounded-lg shadow-md p-6">
            <div class="space-y-4">
                {% for discussion in discussions %}
                    <div class="border rounded-lg p-4 hover:bg-gray-50 transition duration-300">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="font-semibold">Discussion avec l'administrateur</h3>
                                <p class="text-sm text-gray-600">Dernier message : {{ discussion.lastMessageAt|date('d/m/Y H:i') }}</p>
                            </div>
                            <a href="{{ path('app_discussion_show', {'id': discussion.id}) }}" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm transition duration-300">
                                Voir la conversation
                            </a>
                        </div>
                        {% if discussion.unreadCount > 0 %}
                            <span class="inline-block bg-red-500 text-white text-xs px-2 py-1 rounded-full mt-2">
                                {{ discussion.unreadCount }} message(s) non lu(s)
                            </span>
                        {% endif %}
                    </div>
                {% else %}
                    <p class="text-gray-600 text-center py-4">Vous n'avez pas encore de discussions.</p>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 