{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="profile-container">
    <div class="profile-content">
        {# En-tête du profil #}
        <div class="card animate-fade-in">
            <div class="profile-header">
                {# Avatar avec initiales #}
                <div class="profile-avatar">
                    {{ user.firstName|first|upper }}{{ user.name|first|upper }}
                </div>
                <div class="profile-info">
                    <h1>{{ user.firstName }} {{ user.name }}</h1>
                    <div class="profile-badges">
                        <span class="badge badge-success">
                            <i class="fas fa-check-circle"></i>
                            Compte vérifié
                        </span>
                        <span class="badge badge-info">
                            <i class="far fa-calendar"></i>
                            Membre depuis {{ user.createdAt|date('d/m/Y') }}
                        </span>
                    </div>
                </div>
            </div>
        </div>

        {# Sections du profil #}
        <div class="profile-grid">
            {# Section Informations #}
            <div class="section animate-fade-in">
                <div class="section-header">
                    <h2 class="section-title">Informations</h2>
                    <i class="fas fa-user-circle section-icon"></i>
                </div>
                <p class="section-content">Gérez vos informations personnelles</p>
                <a href="{{ path('app_profile_edit') }}" class="btn btn-secondary">
                    Modifier mes informations
                </a>
            </div>

            {# Section Réservations #}
            <div class="section animate-fade-in">
                <div class="section-header">
                    <h2 class="section-title">Réservations</h2>
                    <i class="fas fa-calendar-alt section-icon"></i>
                </div>
                <p class="section-content">Consultez vos rendez-vous</p>
                <a href="{{ path('app_profile_reservations') }}" class="btn btn-secondary">
                    Voir mes réservations
                </a>
                
                {% if reservations|length > 0 %}
                <div class="reservation-list">
                    <h3>Prochains rendez-vous</h3>
                    {% for reservation in reservations %}
                        {% if reservation.bookedAt|date('Y-m-d') >= 'now'|date('Y-m-d') %}
                            <div class="reservation-item">
                                <div class="reservation-info">
                                    <p class="reservation-title">{{ reservation.service.reference }}</p>
                                    <p class="reservation-date">{{ reservation.bookedAt|date('d/m/Y H:i') }}</p>
                                </div>
                                <span class="reservation-status status-upcoming">
                                    <i class="fas fa-calendar-check"></i>
                                    À venir
                                </span>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                {% endif %}
            </div>

            {# Section Discussions #}
            <div class="section animate-fade-in">
                <div class="section-header">
                    <h2 class="section-title">Discussions</h2>
                    <i class="fas fa-comments section-icon"></i>
                </div>
                <p class="section-content">Échangez avec l'architecte</p>
                <a href="{{ path('app_profile_discussions') }}" class="btn btn-secondary">
                    Voir mes discussions
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}