{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <section class="profile-container">
        <article class="profile-content">
            <a href="{{ path('profile_reservations') }}" class="back-link">
                <i class="fas fa-arrow-left"></i>
                Retour
            </a>
            
            <section class="card animate-fade-in">
                <div class="profile-header">
                    <h1>Annulation de votre réservation</h1>
                </div>
                
                <div class="reservation-details">
                    <div class="reservation-info">
                        {% if is_refunded %}
                            <div class="alert alert-success">
                                <p>Votre réservation a été annulée et remboursée. Le montant de {{ amount }} € vous a été remboursé.</p>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                <p>Votre réservation a été annulée avec succès. Conformément à nos conditions, aucun remboursement ne sera effectué car l'annulation est intervenue moins de 72 heures avant le rendez-vous.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </section>
        </article>
    </section>
{% endblock %}
