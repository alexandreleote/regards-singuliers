{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Nouvelle Réalisation - regards singuliers{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="text-center mb-4">Ajouter une Réalisation</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="mb-3">
                    {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.clientName, 'Nom du Client', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.clientName, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.clientName) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.projectDate, 'Date du Projet', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.projectDate, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.projectDate) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.projectType, 'Type de Projet', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.projectType, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.projectType) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.technologiesUsed, 'Technologies Utilisées', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.technologiesUsed, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.technologiesUsed) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.featuredImage, 'Image Principale', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.featuredImage, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.featuredImage) }}
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Enregistrer la Réalisation</button>
                    <a href="{{ path('realisations') }}" class="btn btn-secondary ms-2">Annuler</a>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}