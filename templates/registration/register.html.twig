{% extends 'auth_base.html.twig' %}

{% block title %}Inscription - regards singuliers{% endblock %}

{% block body %}
    <div class="auth-container register-container">
        <div class="auth-form-section">
            <div class="auth-form-container">
                <a href="{{ path('home') }}" class="auth-logo">
                    <h1>regards singuliers</h1>
                    <span>Priscilia Leote - Architecte d'intérieur</span>
                </a>
                
                <h2 class="auth-form-title">Inscription</h2>
                <p class="auth-form-subtitle">Créez votre compte personnel</p>
                
                <form method="post">
                    {% if error is defined and error %}
                        <div class="auth-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="auth-form-group">
                        <label for="email" class="auth-form-label">Email</label>
                        <input type="email" name="email" id="email" class="auth-form-input" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="auth-form-group">
                        <label for="password" class="auth-form-label">Mot de passe</label>
                        <input type="password" name="password" id="password" class="auth-form-input" autocomplete="new-password" required>
                    </div>
                    
                    <div class="auth-form-group">
                        <label for="password_confirm" class="auth-form-label">Confirmez le mot de passe</label>
                        <input type="password" name="password_confirm" id="password_confirm" class="auth-form-input" autocomplete="new-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}">

                    <div class="auth-form-group">
                        <div class="checkbox">
                            <input type="checkbox" name="agree_terms" id="agree_terms" required>
                            <label for="agree_terms">J'accepte les <a href="{{ path('cgu') }}" target="_blank">conditions générales d'utilisation</a></label>
                        </div>
                    </div>

                    <button class="auth-submit-btn" type="submit">
                        S'inscrire
                    </button>
                </form>

                <div class="auth-links">
                    <a href="{{ path('login') }}" class="auth-link">Déjà un compte ?</a>
                </div>
            </div>
        </div>
        <div class="auth-image-section register-image"></div>
    </div>
{% endblock %}
