{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .date-container {
            max-width: 1024px;
            margin: 2rem auto;
            padding: 0 1rem;
        }
        .date-content {
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }
        .service-info {
            margin-bottom: 2rem;
        }
        .service-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1rem;
        }
        .service-description {
            color: #4b5563;
            margin-bottom: 1.5rem;
        }
        .price-info {
            background-color: #f3f4f6;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }
        .price-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="date-container">
        <div class="date-content">
            <div class="service-info">
                <h1 class="service-title">{{ service.title }}</h1>
                <p class="service-description">{{ service.description }}</p>
                
                {% if reservation and reservation.payments|length > 0 %}
                    <div class="price-info">
                        <div class="price-row">
                            <span>Acompte payé :</span>
                            <span>{{ reservation.payments|last.amount }}€</span>
                        </div>
                        <div class="price-row">
                            <span>Reste à payer :</span>
                            <span>{{ service.price - reservation.payments|last.amount }}€</span>
                        </div>
                    </div>
                {% endif %}
            </div>

            <!-- Calendly inline widget begin -->
            <div class="calendly-inline-widget" data-url="{{ calendly_url }}" style="min-width:320px;height:700px;"></div>
            <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
            <!-- Calendly inline widget end -->
        </div>
    </div>

    <script>
        window.addEventListener('message', function(e) {
            if (e.data.event && e.data.event.indexOf('calendly') === 0) {
                if (e.data.event === 'calendly.event_scheduled') {
                    window.location.href = '{{ path('reservation_confirmation') }}';
                }
            }
        });
    </script>
{% endblock %} 