{% extends 'security/base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Réinitialisation du mot de passe</h1>
        </div>
        
        <div class="auth-body">
            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-error" role="alert">{{ flash_error }}</div>
            {% endfor %}
            
            <p class="mb-4">Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

            {{ form_start(requestForm) }}
                {{ form_row(requestForm.email, {
                    'attr': {'class': 'form-control'}
                }) }}

                <button class="btn btn-primary auth-submit">Envoyer le lien</button>
            {{ form_end(requestForm) }}

            <div class="auth-links mt-3">
                <a href="{{ path('app_login') }}">Retour à la connexion</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
