{% extends 'security/base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h1>Réinitialisation du mot de passe</h1>
        </div>
        
        <div class="auth-body">
            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword, {
                    'attr': {'class': 'form-control'}
                }) }}

                <button class="btn btn-primary auth-submit">Réinitialiser le mot de passe</button>
            {{ form_end(resetForm) }}

            <div class="auth-links mt-3">
                <a href="{{ path('app_login') }}">Retour à la connexion</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
