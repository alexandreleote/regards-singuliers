{% extends 'auth_base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card login-layout">
            <div class="form-side">
                <div class="auth-form">
                    <a href="{{ path('home') }}" class="form-title">
                        <h1>regards singuliers</h1>
                        <span>Architecture d'intérieur</span>
                    </a>
                    
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form method="post">
                        <div class="form-group">
                            <label for="username">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" aria-label="Votre adresse email" placeholder="Votre adresse@email.fr" autocomplete="email" required autofocus>
                        </div>
                        
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <div class="password-field">
                                <input type="password" name="_password" id="password" class="form-control"
                                placeholder="Mot de passe" aria-label="Votre mot de passe" autocomplete="current-password" required>
                                <i class="fas password-toggle fa-eye" onclick="togglePasswordVisibility(this)"></i>
                            </div>

                            <div class="checkbox">
                                <input type="checkbox" name="_remember_me" id="_remember_me">
                                <label for="_remember_me">Se souvenir de moi</label>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button type="submit" aria-label="Se connecter à son compte">Se connecter</button>

                        <div class="form-footer">
                            <a href="{{ path('forgotten_password')}}">Mot de passe oublié</a>
                            <a href="{{ path('register') }}">Pas encore de compte ?</a>
                        </div>
                    </form>
                </div>
            </div>
            <div class="image-side"></div>
        </div>
    </div>
{% endblock %}