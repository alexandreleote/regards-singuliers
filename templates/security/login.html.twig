{% extends 'auth_base.html.twig' %}

{% block title %}Connexion - regards singuliers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/auth.css') }}">
{% endblock %}

{% block body %}
    <div class="auth-container login-container">
        <div class="auth-form-section">
            <div class="auth-form-container">
                <a href="{{ path('home') }}" class="auth-logo">
                    <h1>regards singuliers</h1>
                    <span>Priscilia Leote - Architecte d'intérieur</span>
                </a>
                
                <h2 class="auth-form-title">Connexion</h2>
                <p class="auth-form-subtitle">Accédez à votre espace personnel</p>
                
                <form method="post">
                    {% if error %}
                        <div class="auth-error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="auth-form-group">
                        <label for="username" class="auth-form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="auth-form-input" autocomplete="email" required autofocus>
                    </div>
                    
                    <div class="auth-form-group">
                        <label for="password" class="auth-form-label">Mot de passe</label>
                        <input type="password" name="_password" id="password" class="auth-form-input" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="auth-form-group">
                        <div class="checkbox">
                            <input type="checkbox" name="_remember_me" id="_remember_me">
                            <label for="_remember_me">Se souvenir de moi</label>
                        </div>
                    </div>

                    <button class="auth-submit-btn" type="submit">
                        Se connecter
                    </button>
                </form>

                <div class="auth-links">
                    <a href="{{ path('register') }}" class="auth-link">Pas encore de compte ?</a>
                </div>
            </div>
        </div>
        <div class="auth-image-section login-image"></div>
    </div>
{% endblock %}
