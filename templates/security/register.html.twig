{% extends 'auth_base.html.twig' %}

{% block title %}Inscription - regards singuliers{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card register-layout">
            <div class="form-side">
                <div class="auth-form">
                    <a href="{{ path('home') }}" class="form-title">
                        <h1>regards singuliers</h1>
                        <span>Architecture d'intérieur</span>
                    </a>

                    {% if error %}
                        <div class="alert alert-danger">{{ error }}</div>
                    {% endif %}

                    {{ form_start(registrationForm, {'attr': {'class': 'auth-form'}}) }}
                        <div class="form-group">
                            {{ form_label(registrationForm.email) }}
                            {{ form_widget(registrationForm.email) }}
                            {{ form_errors(registrationForm.email) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.plainPassword) }}
                            {{ form_widget(registrationForm.plainPassword) }}
                            {{ form_errors(registrationForm.plainPassword) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(registrationForm.agreeTerms) }}
                            {{ form_widget(registrationForm.agreeTerms) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>

                        <button type="submit">S'inscrire</button>

                        <div class="form-footer">
                            <a href="{{ path('login') }}">Déjà un compte ?</a>
                        </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
            <div class="image-side"></div>
        </div>
    </div>
{% endblock %} 