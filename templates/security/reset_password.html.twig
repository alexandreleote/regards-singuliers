{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card">
            <div class="form-side">
                <div class="auth-form">
                    <h1>Récupération de votre mot de passe</h1>
                    <p class="form-description">Entrez votre nouveau mot de passe.</p>

                    {{ form_start(passForm, {'attr': {'class': 'form'}}) }}
                        <div class="form-group">
                            <div class="password-field">
                                {{ form_row(passForm.plainPassword.first, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Nouveau mot de passe',
                                        'aria-label': 'Nouveau mot de passe'
                                    }
                                }) }}
                                <i class="fas password-toggle fa-eye" onclick="togglePasswordVisibility(this)"></i>
                            </div>
                            <div class="password-field">
                                {{ form_row(passForm.plainPassword.second, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': 'Confirmer le mot de passe',
                                        'aria-label': 'Confirmer le mot de passe'
                                    }
                                }) }}
                                <i class="fas password-toggle fa-eye" onclick="togglePasswordVisibility(this)"></i>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">

                        <button type="submit" class="submit-btn" aria-label="Réinitialiser le mot de passe">
                            Réinitialiser le mot de passe
                        </button>
                    {{ form_end(passForm) }}
                </div>
            </div>
            <div class="image-side"></div>
        </div>
    </div>
{% endblock %}