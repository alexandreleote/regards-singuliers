{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="auth-card">
            <div class="form-side">
                <div class="auth-form">
                    <h1>Demande de réinitialisation de mot de passe</h1>
                    <p class="form-description">Entrez votre adresse email pour recevoir un lien de réinitialisation.</p>

                    {{ form_start(requestPassForm, {'attr': {'class': 'form'}}) }}
                        {{ form_row(requestPassForm.email, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Votre adresse@email.fr',
                                'aria-label': 'Votre adresse email'
                            }
                        }) }}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password_request') }}">

                        <button type="submit" class="submit-btn" aria-label="Demander la réinitialisation du mot de passe">
                            Envoyer
                        </button>
                    {{ form_end(requestPassForm) }}
                </div>
            </div>
            <div class="image-side"></div>
        </div>
    </div>
{% endblock %}