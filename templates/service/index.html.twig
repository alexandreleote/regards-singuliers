{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8">{{ page_title }}</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for service in services %}
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    <div class="p-6">
                        <h5 class="text-xl font-bold mb-2">{{ service.title }}</h5>
                        <p class="text-gray-600 mb-4">{{ service.description }}</p>
                        <p class="text-lg font-semibold mb-4">
                            <strong>Prix :</strong> {{ service.price }} â‚¬
                        </p>
                    </div>
                    <div class="px-6 py-4 bg-gray-50">
                        <a href="{{ path('prestation_show', {'id': service.id}) }}" 
                           class="block w-full text-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
                            Voir
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}