{% extends 'base.html.twig' %}

{% block title %}{{ service.title }}{% endblock %}

{% block body %}
    <section class="content-container">
        <div class="service-detail">
            <header>
                <h1 class="service-title">{{ service.title }}</h1>
            </header>
            
            <article class="service-content">
                <div class="service-description">
                    {{ service.description|raw }}
                </div>
                
                <div class="service-pricing">
                    <p class="price">Prix : <strong>{{ service.price|number_format(0, ',', ' ') }} €</strong></p>
                    <p class="deposit-info">Un acompte de 50% sera demandé pour confirmer votre réservation.</p>
                </div>
                
                <div class="service-actions">
                    <a href="{{ path('reservation_payment', {'slug': service.slug}) }}" 
                    class="btn btn-primary" 
                    aria-label="Réserver la prestation {{ service.title }}">
                        Réserver cette prestation
                    </a>
                </div>
            </article>
        </div>
    </section>
{% endblock %}